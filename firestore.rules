
rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {
    // Aplica a regra para TODOS os documentos no banco
    match /{document=**} {
      // PERMITE leitura/escrita se o usu√°rio estiver logado (tem auth.uid)
      allow read, write: if request.auth != null;
    }
  }
}
